<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="email">
	<resultMap id="codeInfo" type="hashmap">
		<result property="invite_group_no" column="INVITE_GROUP_NO" javaType="java.lang.String"/>
		<result property="member_no" column="MEMBER_NO" javaType="java.lang.String"/>
	</resultMap>
	
	<!-- email 인증 관련 query -->	
	<select id="selectToken" parameterType="java.lang.String"  resultMap="codeInfo">
       SELECT INVITE_GROUP_NO, MEMBER_NO from CODE_TB WHERE TOKEN=#{token}
	</select>
	
	<!-- 회원 id로 member_no 가지고 오는 query -->
	<select id="selectMemberNo" parameterType="java.lang.String"  resultType="java.lang.Integer"> 
		select MEMBER_NO from MEMBER_TB where EMAIL="#{receiverEmail}";
	</select>
	
	<!-- 회원, 비회원 구분 query -->
	<select id="selectMemberOrNot" parameterType="java.lang.String"  resultType="java.lang.Integer"> 
		SELECT count(*) FROM MEMBER_TB WHERE EMAIL=#{receiverEmail}
	</select>
	
	<!-- 인증 token값 삽입 -->
	<insert id="insertToken" parameterType="hashmap">
	    INSERT INTO CODE_TB(MEMBER_NO, INVITE_GROUP_NO, TOKEN) VALUES (#{memberNo},#{groupNo}, #{token});
	</insert>
	
</mapper>